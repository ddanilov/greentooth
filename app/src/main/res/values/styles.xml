<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryColorVariant</item>
        <item name="colorOnPrimary">@color/onPrimaryColor</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/secondaryColorVariant</item>
        <item name="colorOnSecondary">@color/onSecondaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorOnPrimarySurface">@color/onPrimarySurfaceColor</item>
        <item name="colorSurface">@color/colorSurface</item>
    </style>

    <style name="ThemeOverlay_Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <!-- color used by the toolbar title -->
        <item name="android:textColorPrimary">@color/onPrimaryColor</item>
        <!-- color used by navigation icon and overflow icon -->
        <item name="colorOnPrimary">@color/onPrimaryColor</item>

    </style>

    <style name="Menu_Theme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorControlActivated">#64b358</item>
    </style>

    <style name="CustomSwitch" parent="AppTheme">
        <item name="colorControlActivated">@color/switchThumbDisabledColor</item>
    </style>
</resources>
